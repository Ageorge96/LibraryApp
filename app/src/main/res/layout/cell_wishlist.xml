<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/selector_library">

    <TextView
        android:id="@+id/txt_wishCell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/img_wishCell_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_wishCell_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        app:layout_constraintTop_toBottomOf="@+id/txt_wishCell_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_wishCell_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        app:layout_constraintTop_toBottomOf="@+id/txt_wishCell_author"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_wishCell_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        app:layout_constraintTop_toBottomOf="@id/txt_wishCell_genre"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_wishCell_cover"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:src="@drawable/cover_unavailable"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>